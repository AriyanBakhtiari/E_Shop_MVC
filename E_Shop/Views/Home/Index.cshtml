@model List<Product>
@{
    ViewData["Title"] = "Zhatis Shop";
}

<div class="text-center">
    <h1 class="display-4">خوش آمدید</h1>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <img src="/Images/@(item.Id).jpg" height="170" width="170" class="card-img-top img-thumbnail" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">جزییات محصول</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
